<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.tiger.screenmanager"
     >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.tiger.screenmanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.tiger.screenmanager.ScreenBrightnessActivity"
            android:label="@string/app_name"
            android:theme="@style/SeekbarDialog"  >
        </activity>
        <activity
            android:name="com.android.tiger.screenmanager.GetScreenParaAcitivity"
            android:label="@string/app_name" >
        </activity>
        <service android:name="com.android.tiger.screenmanager.FloatWindowService">

        </service>
    </application>

</manifest>