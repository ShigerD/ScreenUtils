<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="540px"
    android:layout_height="380px"
    android:background="@drawable/bg_round_dark_gray"
    android:orientation="vertical"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/choose_available_park"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="56px"
            android:layout_height="56px"
            android:src="@drawable/lock_close_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"/>

    </RelativeLayout>


    <com.shiger.tools.view.EasyPickerView
        android:id="@+id/car_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        custom:epvMaxShowNum="3"
        custom:epvRecycleMode="true"
        custom:epvTextColor="#4bde45"
        custom:epvTextMaxScale="1.3"
        custom:epvTextMinAlpha="1"
        custom:epvTextPadding="10dp"
        custom:epvTextSize="30sp"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="180px"
        android:layout_height="56px"
        android:text="@string/ground_lock"
        android:textColor="@color/white"
        android:background="@drawable/square_round_fill"
        android:textSize="20sp"
        />

</LinearLayout>